#!/bin/zsh
AUTHOR="Gigamo <gigamo@gmail.com>"
APP="ctg"
VERSION="v0.01"
DESCRIPTION="Simple script for moving files over to local git repo"

RED="\033[1;31m"
GREEN="\033[1;32m"
BLUE="\033[1;34m"
END="\033[0m"

SRCDIR="$HOME"
GITDIR="$HOME/gitconfig/config"
EDITOR="$EDITOR"
SRCFILE=$1

function usage() { 
echo >&2 "$RED$APP $GREEN$VERSION ${BLUE}by $AUTHOR$END - $DESCRIPTION 
Usage: ctg [file]
    For example:    ctg bin/ctg
                    will copy bin/ctg to $GITDIR/bin/ctg";
exit 1
}

function ctg() {
  echo "Copying $SRCFILE to $GITDIR and adding it to GIT"
  `cp -r $SRCDIR/$SRCFILE $GITDIR/$SRCFILE && cd $GITDIR && git add $SRCFILE`
}

if [ -z "$1" ]; then
  usage
else
  ctg
  exit 0
fi
