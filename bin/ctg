#!/bin/zsh
AUTHOR="Gigamo <gigamo@gmail.com>"
APP="ctg"
VERSION="v0.01"
DESCRIPTION="simple script for moving files over to local git repo"

RED="\033[1;31m"
GREEN="\033[1;32m"
BLUE="\033[1;34m"
END="\033[0m"

SRCDIR="$HOME"
GITDIR="$SRCDIR/gitconfig/config"
SRCFILE=$*

function usage() { 
  echo >&2 "  $RED$APP $BLUE$VERSION$END - $DESCRIPTION 
  Usage: ctg [${GREEN}file${END}]";
  exit 1
}

function ctg() {
  for i in $SRCFILE; do
    echo "Copying $GREEN$i$END to $RED$GITDIR$END and adding it to GIT"
    `cp -r $SRCDIR/$i $GITDIR/$i && cd $GITDIR && git add $i`
  done
}

if [ -z "$1" ]; then
  usage
else
  ctg
  exit 0
fi
