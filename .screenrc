defscrollback 10000
deflogin on
altscreen on
autodetach on
msgwait 2 # 1 second messages
activity "active: %n (%t) [%w:%s]"
bell "bell: %n (%t) [%w:%s]^G"
vbell_msg "[[[ ding ]]]"
vbell off
startup_message off
defutf8 on

termcapinfo xterm|xterms|xterm-color|screen|xs|rxvt ti@:te@

caption always "%{= kb}[ %{kW}$USER%{kB}@%H %{b}][ %=%{w}%?%-Lw%?%{b}(%{W}%n*%f %t%?(%u)%?%{b})%{w}%?%+Lw%?%= %{b}][%{kB} %d.%m.%Y %{kW}%0c %{kb}]"
#hardstatus alwayslastline "%{=b W}%{k} %= %w %=" 
sorendition +b kG

# Default apps
screen -t torrent rtorrent
screen -t irc weechat-curses
screen zsh
#screen -t log sudo tail -f /var/log/messages.log

bindkey -k k1 prev
bindkey -k k2 next

select 1
