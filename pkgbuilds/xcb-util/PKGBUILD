# Contributor: Gigamo <gigamo@gmail.com>

pkgname=xcb-util
pkgver=20080409
pkgrel=1
pkgdesc="Utilities for X C Bindings, required by Awesome 3.0"
arch=('i686' 'x86_64')
license=('GPL')
depends=('libxcb' 'xcbproto')
makedepends=('gperf' 'git')
provides=('xcb-util')

_gitroot="git://git.naquadah.org/arnau/xcb-util.git"
_gitname="xcb-util"

build() {
  cd $srcdir

  if [ -d $_gitname ]; then
    (cd $_gitname && git-pull origin)
  else
    git clone $_gitroot
  fi
 
  cd $_gitname

  #msg "Applying patch..."
  #wget http://users.telenet.be/gigamo/tmp/arnau.diff
  #patch -p1 -i arnau.diff

  msg "Starting make..."

  autoreconf -vis || return 1
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR=$pkgdir install || return 1
}
