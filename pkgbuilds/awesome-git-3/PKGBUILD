# Contributor: Gigamo <gigamo@gmail.com>

pkgname=awesome-git-3
pkgver=20080409
pkgrel=1
pkgdesc="Awesome-3 git branch for Awesome"
arch=('i686' 'x86_64')
url="http://awesome.naquadah.org/"
license=('GPL')
depends=('cairo' 'xcb-util' 'confuse' 'pango' 'libxinerama' 'libxrandr')
makedepends=('asciidoc' 'docbook-xsl' 'git' 'pkgconfig' 'xmlto')
provides=('awesome')
conflicts=('awesome' 'awesome-git')
source=()
md5sums=()

_gitroot="git://git.naquadah.org/awesome.git"
_gitname="awesome"

build() {
  cd $startdir/src

  if [ -d $_gitname ]; then
    (cd $_gitname && git-fetch origin && git-reset --hard origin/awesome-3)
  else
    git clone $_gitroot
    cd $_gitname
    git-fetch origin awesome-3:awesome-3
    sleep 2
    git-checkout awesome-3
  fi

  msg "Starting make..."

  cd $_gitname

  autoreconf -vis || return 1 
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1

  msg "Making cfg backup"
  cp ~/.awesomerc ~/.awesome.bak

  msg "Installing sample awesomerc to /usr/share/awesome"

  install -D -m644 awesomerc $startdir/pkg/usr/share/awesome/awesomerc
}
